@model Kategori

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="container mt-4">
    <h2>➕ Yeni Kategori Ekle</h2>
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary mb-3">⬅ Geri Dön</a>

    <form asp-action="Ekle" method="post" class="needs-validation" novalidate>
        <div class="form-group mb-3">
            <label asp-for="Ad" class="form-label">Kategori Adı</label>
            <input asp-for="Ad" class="form-control" required />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">✅ Kaydet</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}