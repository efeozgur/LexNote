@model LexNote.Models.Notum

<h2>Not @ViewData["Title"]</h2>
<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label asp-for="Baslik"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Icerik"></label>
        <textarea asp-for="Icerik" id="icerik" class="form-control"></textarea>
        <span asp-validation-for="Icerik" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Etiketler"></label>
        <input asp-for="Etiketler" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kategori</label>
        <select asp-for="KategoriId" asp-items="ViewBag.Kategoriler" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
</form>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

<script>
    var simplemde = new SimpleMDE({
        element: document.getElementById("icerik"),
        spellChecker: false,
        status: false,
        autosave: {
            enabled: false
        }
    });
</script>